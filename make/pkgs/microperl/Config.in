config FREETZ_PACKAGE_MICROPERL
	bool "microperl (binary only)"
	default n
	help
		Perl without operating-specific functions such as readdir.

if FREETZ_PACKAGE_MICROPERL

	choice
		prompt "Version"
		default FREETZ_PACKAGE_MICROPERL_VERSION_5_38

		config FREETZ_PACKAGE_MICROPERL_VERSION_5_10
			bool "5.10.1 (legacy)"

		config FREETZ_PACKAGE_MICROPERL_VERSION_5_38
			bool "5.38.2 (stable)"

	endchoice

endif # FREETZ_PACKAGE_MICROPERL

config FREETZ_PACKAGE_MICROPERL_MODULES
	string "microperl modules"
	default "strict.pm warnings.pm warnings/register.pm constant.pm Exporter.pm Exporter/Heavy.pm Carp.pm Errno.pm POSIX.pm Storable.pm Fcntl.pm Encode.pm Cwd.pm overload.pm File/Spec.pm File/stat.pm Class/Struct.pm Data/Dumper.pm File/Temp.pm Getopt/Long.pm IO/File.pm Scalar/Util.pm"
	depends on FREETZ_PACKAGE_MICROPERL
	help
		List of microperl modules to copy to the rootfs.
		E.g.
		warnings.pm warnings/register.pm strict.pm constant.pm vars.pm
		Exporter.pm Exporter/Heavy.pm Carp.pm Getopt/Long.pm

