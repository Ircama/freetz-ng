config FREETZ_PACKAGE_STRACE
	bool "strace 4.9/5.0/6.17 - System call tracer"
	default n
	help
		strace - trace system calls and signals

		strace is a system call tracer, i.e. a debugging tool which prints out
		a trace of all the system calls made by another process/program.
		
		Perfect for:
		- Debugging application behavior
		- Finding missing libraries or files
		- Analyzing system call performance
		- Troubleshooting permission issues
		- Understanding program execution flow
		
		Size: ~1.3 MB (can be externalized to save flash memory)
		
		Example usage:
		  strace ./myprogram
		  strace -p <pid>
		  strace -e open,read,write ./myprogram

if FREETZ_PACKAGE_STRACE

	choice
		prompt "Version"

		config FREETZ_PACKAGE_STRACE_VERSION_4
			bool "4.9"
			depends on  (                                FREETZ_KERNEL_VERSION_2_6_13)

		config FREETZ_PACKAGE_STRACE_VERSION_5
			bool "5.0"
			depends on  (FREETZ_KERNEL_VERSION_2_MAX && !FREETZ_KERNEL_VERSION_2_6_13)

		config FREETZ_PACKAGE_STRACE_VERSION_6
			bool "6.17"
			depends on !(FREETZ_KERNEL_VERSION_2_MAX                                 )

	endchoice

endif # FREETZ_PACKAGE_STRACE

